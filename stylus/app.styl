body 
    position: fixed
    margin: 0
    padding: 0.5em
    top: 0
    left: 0
    bottom: 0
    right: 0

.hq-main-container
    height: 100%
    padding: 0

.hq-flex-container
    height: 100%
    display: flex
    flex-direction: column
    flex-wrap: nowrap
    justify-content: flex-start
    align-content: stretch
    align-items: stretch

.hq-drop-area // flex-expanding-item
    order: 0
    flex: 1 1 auto
    align-self: auto
    border: 1px dashed gray

.hq-drop-area--file-over
    background-color: lightgray

.hq-drop-area_prompt
    text-align: center
    font-size: large
    color: gray
    margin-top: 1em

.hq-create-button
    margin-top: 0.5em
    align-self: flex-end

.hq-file
    margin: 0.75em
    padding: 0.25em
    background-color: #ddd